<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefragments.UpdateIconFragment"
    android:padding="20dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Select a new icon"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@drawable/user_icon_4"
            app:srcCompat="@drawable/user_icon_1"
            android:layout_margin="10dp"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/icon2"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@drawable/user_icon_4"
            app:srcCompat="@drawable/user_icon_2"
            android:foregroundGravity="center"
            android:layout_margin="10dp"
            android:clickable="true"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon3"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@drawable/user_icon_4"
            app:srcCompat="@drawable/user_icon_3"
            android:layout_margin="10dp"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/icon4"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@drawable/user_icon_4"
            app:srcCompat="@drawable/user_icon_4"
            android:layout_margin="10dp"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>